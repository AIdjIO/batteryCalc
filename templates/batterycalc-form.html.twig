{{ form.form_build_id }}
{{ form.form_id }}
{{ form.form_token }}
<div style="text-align:right">
<p id="calcVersion">Version 1.0</p>
<button id="PDFRprt" type="button" class="btn btn-warning" style="position:relative;bottom:0">Generate PDF Report</button>
</div>
<div class="container">
  <div class="align-items-center text-center">
    {{ form.Batt_Title }}
  </div>
  
    {{ form.Cycle_Select }}
    Sources: <a href="https://assets.publishing.service.gov.uk/media/5a7984f440f0b642860d8c2d/ppr-354.pdf" target="_blank">A reference book of driving cycles for use in the measurement of road vehicle emissions</a> and 
    <a href="https://www.epa.gov/vehicle-and-fuel-emissions-testing/dynamometer-drive-schedules" target="_blank">Vehicle and Fuel Emissions Testing - Dynamometer Drive Schedules</a>
    {{ form.Speed_Container }}
    <div class="accordion bg-secondary" id="accordionExample">
      <div class="accordion-item">
        <h5 class="accordion-header m-0" id="headingOne">
          <button class="accordion-button btn-warning" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            Collapse/Expand Speed Cycle Plot
          </button>
        </h5>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            {{ form.Speed_Info_Container }}
            {{ form.PlotlySpeedPreview }}
          </div>
        </div>
      </div>
    </div>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="size-tab" data-bs-toggle="tab" data-bs-target="#size-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Battery Pack Size</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="spec-tab" data-bs-toggle="tab" data-bs-target="#spec-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Battery Pack Spec</button>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="size-tab-pane" role="tabpanel" aria-labelledby="size-tab" tabindex="0">
        <div class="container p-0">
          <div class="row">
            <div class="col-3">
                {{ form.powertrain }}
                {{ form.vehicle }} 
                {{ form.environment }}
                <!-- {{ form.CalculatePackSize }} -->
                {{ form.Results }}
            </div>
            <div class="col-9">
              {{ form.PlotlySpeedPackSize }}
            </div>
          </div>
        </div>
      </div>
      
      <div class="tab-pane fade" id="spec-tab-pane" role="tabpanel" aria-labelledby="spec-tab" tabindex="0">
        <div class="container p-0">
          <div class="row">
            {{ form.Cell_Table }}
          </div>
          <div class="row p-1">
            <div class="col-3">
              <div class="row align-items-start">
                {{ form.pack }}         
              </div>
            </div>
            <div class="col-9">
              {{ form.PlotlySpeedPackSpec }}
            </div>
          </div>
          </div>
                {{ form.PackParameters }}
        </div>
    </div>
  </div>
</div>